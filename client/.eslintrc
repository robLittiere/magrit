{
  "extends": "airbnb",
  # "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    # Global variables from external libraries:
    "d3": true,
    "DataTable": true,
    "docCookies": true,
    "geostats": true,
    "i18next": true,
    "localize": true,
    "Modal": true,
    "swal": true,
    "Tooltip": true,
    # Global variables created by the application:
    "_app": true,
    "_tr": true,
    "data_manager": true,
    "defs": true,
    "encodeId": true,
    "fields_handler": true,
    "get_bounding_rect": true,
    "get_map_xy0": true,
    "helper_esc_key_twbs_cb": true,
    "map": true,
    "map_div": true,
    "overlay_drop": true,
    "path": true,
    "proj": true,
    "svg_map": true,
    "_target_layer_file": true,
    "t": true,
    "s": true,
    "h": true,
    "w": true,
  },
  "rules": {
    "camelcase": 0,
    "consistent-return": 1,
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-underscore-dangle": 0,
    "object-shorthand": 1,
    "one-var": ["warn", "never"],
    "no-mixed-operators": 0,
    "no-prototype-builtins": 0,
    "no-undef": 2,
    "no-unused-vars": 1,
    "no-use-before-define": 1,
    "prefer-destructuring": 1,
    # "valid-jsdoc": ["warn", {
    #   "requireReturn": true,
    #   "requireReturnType": true,
    #   "requireParamDescription": true,
    #   "requireReturnDescription": true
    # }],
    # "require-jsdoc": ["warn", {
    #     "require": {
    #         "FunctionDeclaration": true,
    #         "MethodDefinition": true,
    #         "ClassDeclaration": true
    #     }
    # }]
  }
}
